{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./build",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "moduleResolution": "node",            // Recommended for Node.js
        "resolveJsonModule": true,             // Allows importing JSON configs
        "sourceMap": true,                     // Enables debugging with source maps
        "types": ["node"],                     // Gets Node.js type definitions
        "skipLibCheck": true
    },
    "include": ["*"],
    "exclude": ["node_modules", "tests"]
}